---
const fernanDev = '<FernanDev/>';
---

<nav class="fixed top-0 w-full z-10 bg-black/40 backdrop-blur-md px-6 py-4">
  <div class="flex justify-between items-center max-w-[1200px] mx-auto">
    <h2 class="text-amarillo-texto text-[30px] md:text-[40px] font-bold font-ibm">{fernanDev}</h2>

    <!-- Botón hamburguesa -->
    <input id="menu-toggle" type="checkbox" class="hidden peer" />
    <label for="menu-toggle" class="md:hidden cursor-pointer z-20">
      <div class="bg-white/30 p-[.5px] rounded-md">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-10 w-10 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
            d="M4 6h16M4 12h16M4 18h16" />
        </svg>
      </div>
        
    </label>

    <!-- Menú horizontal (visible solo desde md en adelante) -->
    <ul class="hidden md:flex gap-10 text-[18px] font-ibm text-amarillo-texto">
      <li class="rounded-md p-1 hover:scale-110 hover:bg-white/20 transition">
        <a href="#proyectos">Proyectos</a>
      </li>
      <li class="rounded-md p-1 hover:scale-110 hover:bg-white/20 transition">
        <a href="#sobre-mi">Sobre Mí</a>
      </li>
      <li class="rounded-md p-1 hover:scale-110 hover:bg-white/20 transition">
        <a href="#contacto">Contacto</a>
      </li>
    </ul>

    <!-- Menú desplegable en mobile -->
    <ul class="absolute left-0 top-full w-full bg-black/90 text-amarillo-texto text-center text-lg flex-col gap-6 py-6 hidden peer-checked:flex md:hidden font-ibm">
      <li>
        <a href="#proyectos" class="block py-2 hover:bg-white/10">Proyectos</a>
      </li>
      <li>
        <a href="#sobre-mi" class="block py-2 hover:bg-white/10">Sobre Mí</a>
      </li>
      <li>
        <a href="#contacto" class="block py-2 hover:bg-white/10">Contacto</a>
      </li>
    </ul>
  </div>
</nav>
